<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CitaPeluActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayCitaPelu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemCitaPeluDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/citaDatos" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemCitaPeluChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/citaChat" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpCitaPelu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>